{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "preserve",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
